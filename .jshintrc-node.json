// configure jshint settings for node application code
// warning codes for jshint are in:
// node_modules/grunt-contrib-jshint/node_modules/jshint/src/messages.js
{
	"node": true,
	"esversion": 6,
	// closest support for tabs possible at moment jshint considers a tab 4 spaces
	// internally so have to set indent to 4 if you will use tabs for indentation.
	// cannot force the use of tabs though.
	"indent": 4,
	// ignore missing semicolons (automatic semicolon insertion)
	"asi": true,
	"smarttabs": true,
	"maxparams": 3,
	"maxdepth": 2,
	"maxstatements": 11,
	"maxcomplexity": 4,
	"maxlen": 100,
	"bitwise": true,
	"curly": true,
	"eqeqeq": true,
	"forin": true,
	"freeze": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"plusplus": true,
	"quotmark": false,
	"undef": true,
	"unused": "strict",
	"globalstrict": true,
	"trailing": true,
	"laxcomma": true,
	"laxbreak": true,
	"multistr": true,
	"maxerr": 5000
}
