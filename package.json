{
	"name": "perljs",
	"main": "index.js",
	"version": "0.3.3",
	"homepage": "https://github.com/bcowgill/perljs",
	"author": "Brent Cowgill <brent.cowgill@workshare.com> (http://github.com/bcowgill)",
	"description": "Perl for Javascript. Just some functions that a perl developer misses in Javascript.",
	"scripts": {
		"usage": "pnpm run; grunt --help",
		"check": "npm-check --color-always || true",
		"preprettier": "pnpm run prettier:json",
		"prettier": "pnpm run prettier:code",
		"prettier:code": "prettier --write Gruntfile.js $SRC $TESTS",
		"prettier:json": "prettier --write --parser json *.json .*.json",
		"rawprettier": "prettier --no-semi --single-quote --trailing-comma all --use-tabs --tab-width 4 --write $SRC $TEST",
		"lint": "grunt lint",
		"test": "grunt",
		"test:tap": "mocha --reporter tap",
		"watch": "grunt watch",
		"develop": "grunt all watch --force",
		"strip": "./scripts/strip.js",
		"preversion": "./scripts/pre-version.sh",
		"version": "./scripts/version.sh",
		"postversion": "./scripts/post-version.sh",
		"doc": "pnpm run docs",
		"docs": "jsdoc --configure jsdoc.conf.json --destination doc --recurse test/*.js lib/perl.js Gruntfile.js README.md",
		"coverage-view": "chromium-browser doc/coverage/index.html",
		"doc-view": "chromium-browser doc/index.html",
		"docs-view": "chromium-browser doc/index.html",
		"edit": "subl Gruntfile.js `find lib/ test/ -type f`"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bcowgill/perljs.git"
	},
	"keywords": ["perl"],
	"license": {
		"type": "Unlicense",
		"url": "http://unlicense.org/"
	},
	"bugs": {
		"url": "https://github.com/bcowgill/perljs/issues"
	},
	"devDependencies": {
		"chai": "4.3.0",
		"grunt": "^1.3.0",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-concat": "^1.0.1",
		"grunt-contrib-connect": "^3.0.0",
		"grunt-contrib-jshint": "^3.0.0",
		"grunt-contrib-uglify": "^5.0.0",
		"grunt-contrib-watch": "^1.1.0",
		"grunt-jsdoc": "^2.4.1",
		"grunt-mocha-chai-sinon": "0.0.9",
		"grunt-mocha-istanbul": "^5.0.1",
		"grunt-prettier": "^2.1.0",
		"istanbul": "^0.4.3",
		"jsdoc": "^3.6.6",
		"mocha": "8.3.0",
		"npm-check": "^5.9.2",
		"prettier": "^2.2.1",
		"uncommentify": "^0.1.1"
	}
}
