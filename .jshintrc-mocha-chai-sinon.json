// configure jshint settings for test plans which can have tighter complexity settings
// warning codes for jshint are in:
// node_modules/grunt-contrib-jshint/node_modules/jshint/src/messages.js
{
	"node": true,
	// closest support for tabs possible at moment jshint considers a tab 4 spaces
	// internally so have to set indent to 4 if you will use tabs for indentation.
	// cannot force the use of tabs though.
	"indent": 4,
	// ignore missing semicolons (automatic semicolon insertion)
	"asi": true,
	"smarttabs": true,
	"maxparams": 3,
	"maxdepth": 2,
	"maxstatements": 22,
	"maxcomplexity": 1,
	"maxlen": 100,
	"bitwise": true,
	"curly": true,
	"eqeqeq": true,
	"expr": true, // to allow expect().to.be.null
	"forin": true,
	"freeze": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"plusplus": true,
	"quotmark": true,
	"undef": true,
	"unused": "strict",
	"globalstrict": true,
	"trailing": true,
	"laxcomma": true,
	"laxbreak": true,
	"multistr": true,
	"maxerr": 5000,
	"globals": {
		"after": false,
		"afterEach": false,
		"before": false,
		"beforeEach": false,
		"describe": false,
		"expect": true,
		"it": false,
		"xdescribe": false,
		"xit": false
	}
}
